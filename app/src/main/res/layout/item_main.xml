
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    app:cardBackgroundColor="@color/main_white"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardMaxElevation="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
    <com.zshgif.laugh.view.RoundedImageView
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:background="@drawable/mrtx"

        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:text="user_name"
        android:textColor="@color/main_black_grey"
        android:textSize="14sp"
        />
  </LinearLayout>
    <TextView
        android:id="@+id/tital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="left"
        android:text="摊上大事了"
        android:textColor="@color/main_black"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="left"
        android:text="汽车爱好者"
        android:textColor="@color/main_brown"
        android:textSize="11sp"
        />

    <GridView
        android:layout_margin="15dp"
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:numColumns="3"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:layout_height="330dp" >


    </GridView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/d_grey"
        android:orientation="horizontal">
      <Button
          android:layout_width="wrap_content"
          android:layout_height="40dp"
          android:background="@null"
          android:text="2.7"
          android:paddingLeft="10dp"
          android:drawableLeft="@mipmap/praise"
          android:gravity="center_vertical"
          android:textColor="@color/main_black_grey"
          />
      <Button
          android:layout_width="wrap_content"
          android:layout_height="40dp"
          android:background="@null"
          android:text="11111"
          android:paddingLeft="10dp"
          android:drawableLeft="@mipmap/unpraise"
          android:gravity="center_vertical"
          android:textColor="@color/main_black_grey"
          />
      <Button
          android:layout_width="wrap_content"
          android:layout_height="40dp"
          android:background="@null"
          android:text="111"
          android:textColor="@color/main_black_grey"
          />
      </LinearLayout>
  </LinearLayout>
</android.support.v7.widget.CardView>